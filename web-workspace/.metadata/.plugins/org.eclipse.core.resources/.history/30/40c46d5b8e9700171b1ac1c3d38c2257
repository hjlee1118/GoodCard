	@Test
	public void findDB(){
		
		MongoClient mongo = new MongoClient("13.124.174.15", 27017);
		DB db = mongo.getDB("hana");
		
		// get a single collection
		DBCollection collection = db.getCollection("creditCard");
		
		BasicDBObject searchQuery = new BasicDBObject();
		searchQuery.put("brand", "하나카드");
		
		DBCursor cursor = collection.find(searchQuery);
		
		List<BasicDBObject> creditCardList = null;
		
		int index = 1;
		
		while(cursor.hasNext()){
			BasicDBObject creditCard_ = (BasicDBObject)cursor.next();
			CreditCard creditCard = new CreditCard();/*
			System.out.println(creditCard_);*/
			creditCard.setId(creditCard_.getString("_id"));
			creditCard.setBrand(creditCard_.getString("brand"));
			creditCard.setCardName(creditCard_.getString("cardName"));
			creditCard.setAnnotation(creditCard_.getString("annotation"));
			creditCard.setImagePath(creditCard_.getString("imagePath"));
			
			System.out.println(creditCard);
			
			index++;
		}
		System.out.println(index);
		
				
	}	
}