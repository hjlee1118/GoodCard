package kr.co.goodcard.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.data.mongodb.core.MongoTemplate;
import org.springframework.data.mongodb.core.query.Query;

import kr.co.goodcard.dao.CardRepository;
import kr.co.goodcard.service.CardService;
import kr.co.goodcard.vo.Card;

public class CardServiceImpl implements CommandLineRunner {
	
	@Autowired
	private CardRepository cardRepository;

	@Override
	public void run(String... arg0) throws Exception {
		
		System.out.println("----------------------------");
		System.out.println("---------findAll()----------");
		System.out.println("----------------------------");
		
		for(Card card : this.cardRepository.findAll()){
			System.out.println(card);
		}
		
		System.out.println();
	}
	
	

}
