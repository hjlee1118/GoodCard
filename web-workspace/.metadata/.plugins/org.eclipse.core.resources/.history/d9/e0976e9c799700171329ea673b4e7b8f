package goodcard;

import org.springframework.data.mongodb.core.MongoTemplate;
import org.springframework.data.mongodb.core.query.Criteria;
import org.springframework.data.mongodb.core.query.Query;

import kr.co.goodcard.vo.Card;

public class MongoTest {
	
	private MongoTemplate mongoTemplate;
	
	public MongoTest(){
		
	}
	
	public static void main(String[] args){
			MongoTest mongoTest = new MongoTest();
	}
	
	private void findData(String key, String value){
		Criteria criteria = new Criteria(key);
		criteria.is(value);
		
		Query query = new Query(criteria);
		
		Card card = mongoTemplate.findOne(query, Card.class, "checkCard");
		System.out.println("ID" + card.getId());
		System.out.println("Brand" + card.getBrand());
		System.out.println("CardName" + card.getCardName());
		
	}

}
